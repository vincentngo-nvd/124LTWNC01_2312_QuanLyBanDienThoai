<!-- Danh Mục -->
<div class="category">
    @if (ViewBag.ThuongHieuList != null)
    {
        foreach (var thuongHieu in ViewBag.ThuongHieuList)
        {
            <button>
                <img src="~/Images/logo_@(thuongHieu.ToLower()).png" alt="@thuongHieu">
                @thuongHieu.ToUpper()
            </button>
        }
    }
    <!-- Các nút khác không lấy từ API -->
    <button>TIN HOT</button>
    <button>ƯU ĐÃI</button>
</div>

<!-- Main (Body) -->
<div class="body">
    <!-- Hình ảnh -->
    <div class="main-images">
        <img src="~/Images/banner1.jpg" alt="Image 1">
        <div class="side-images">
            <img src="~/Images/banner2.png" alt="Image 2">
            <img src="~/Images/banner3.jpg" alt="Image 3">
        </div>
    </div>

    <!-- Banner -->
    <img src="~/Images/banner.png" alt="Banner" class="banner">

    <!-- Săn Sale -->
    <div class="sale-section">
        <h3>SĂN SALE ONLINE MỖI NGÀY</h3>

        @model IEnumerable<_124LTWNC01_2312_QuanLyBanDienThoai.Models.SanPhamDTO>

        <div class="products">
            @foreach (var item in Model)
            {
                <div class="product">
                    <!-- Hình ảnh sản phẩm -->
                    <img src="@Url.Content("~/Images/" + item.hinhanh)" alt="@item.tensp" class="product-image" />

                    <!-- Tên sản phẩm -->
                    <p class="product-name">@item.tensp</p>

                    <!-- Thông tin kích thước màn hình, RAM và ROM -->
                    <p class="product-details">
                        @item.kichthuocman?.ToString("0.00") inches |
                        @item.ram GB | @item.rom GB
                    </p>

                    <!-- Giá nhập (giá gốc) -->
                    <p class="original-price" style="text-decoration: line-through;">
                        @(item.giaNhap > 0 ? item.giaNhap.ToString("N0") + " đ" : "Liên hệ")
                    </p>

                    <!-- Giá xuất (giá bán) -->
                    <p class="sale-price" style="color: red; font-weight: bold;">
                        @(item.giaXuat > 0 ? item.giaXuat.ToString("N0") + " đ" : "Liên hệ")
                    </p>

                    <!-- 5 ngôi sao (giữ nguyên như yêu cầu) -->
                    <img src="~/Images/yellow_star.png" alt="Star" style="width: 20px; height: 20px;" />
                    <img src="~/Images/yellow_star.png" alt="Star" style="width: 20px; height: 20px;" />
                    <img src="~/Images/yellow_star.png" alt="Star" style="width: 20px; height: 20px;" />
                    <img src="~/Images/yellow_star.png" alt="Star" style="width: 20px; height: 20px;" />
                    <img src="~/Images/yellow_star.png" alt="Star" style="width: 20px; height: 20px;" />
                </div>
            }
        </div>

    </div>

    <!-- Điện Thoại Nổi Bật Nhất -->
    <div class="title-items">
        <p class="title-text">ĐIỆN THOẠI NỔI BẬT NHẤT</p>
        <div class="button-container">
            <button class="product-button">Samsung Galaxy A72</button>
            <button class="product-button">iPhone 15 Promax 512GB</button>
            <button class="product-button">Xiaomi 14</button>
            <button class="view-all-button">Xem tất cả</button>
        </div>
    </div>

    <div class="product-list">
        @foreach (var item in Model)
        {
            <div class="product">
                <!-- Hình ảnh sản phẩm -->
                <img src="@Url.Content("~/Images/" + item.hinhanh)" alt="@item.tensp" class="product-image" />

                <!-- Tên sản phẩm -->
                <p class="product-name">@item.tensp</p>

                <!-- Thông tin kích thước màn hình, RAM và ROM -->
                <p class="product-details">
                    @item.kichthuocman?.ToString("0.0") inches |
                    @item.ram GB | @item.rom GB
                </p>

                <!-- Giá nhập (giá gốc) -->
                <p class="original-price" style="text-decoration: line-through;">
                    @(item.giaNhap > 0 ? item.giaNhap.ToString("N0") + " đ" : "Liên hệ")
                </p>

                <!-- Giá xuất (giá bán) -->
                <p class="sale-price" style="color: red; font-weight: bold;">
                    @(item.giaXuat > 0 ? item.giaXuat.ToString("N0") + " đ" : "Liên hệ")
                </p>

                <!-- 5 ngôi sao (giữ nguyên như yêu cầu) -->
                <img src="~/Images/yellow_star.png" alt="Star" style="width: 20px; height: 20px;" />
                <img src="~/Images/yellow_star.png" alt="Star" style="width: 20px; height: 20px;" />
                <img src="~/Images/yellow_star.png" alt="Star" style="width: 20px; height: 20px;" />
