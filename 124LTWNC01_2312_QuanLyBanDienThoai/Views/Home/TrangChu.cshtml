<!-- Đưa phần style vào đầu file -->
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    /* Header Style */
    .header {
        background-color: #E0052B;
        padding: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .header div select {
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

        .header .logo {
            height: 40px;
            margin-right: 30px;
        }

        .header .search-container {
            position: relative;
            margin-left: 20px;
        }

            .header .search-container input {
                margin-left: 5px;
                padding-left: 30px;
                height: 30px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .header .search-container img {
                height: 20px;
                width: 20px;
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
            }

        .header a {
            color: white;
            text-decoration: none;
            margin-left: 30px;
        }

            .header a img {
                height: 20px;
                vertical-align: middle;
            }

        .header .buttons button {
            margin-left: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 5px;
        }

        .header .buttons img {
            height: 20px;
            vertical-align: middle;
        }

    .category {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0;
        border: 1px solid #ccc;
    }

        .category button {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 150px;
            height: 40px;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 5px;
            padding-bottom: 5px;
            border: 1px solid #ccc;
            margin: 0;
            text-align: center;
            background-color: #fff;
        }

        .category button:hover {
            background-color: #f1f1f1;
        }

        .category img {
            height: 20px;
            margin-right: 5px;
        }


    .body {
        max-width: 1100px; /* Chiều rộng tối đa của nội dung chính */
        margin: 20px auto; /* Căn giữa và tạo khoảng cách trên dưới */
        margin-top: 0;
        border-radius: 8px; /* Bo góc */
    }

        .body .main-images {
            display: flex;
            margin-top: 10px;
        }

            .body .main-images img {
                height: 320px;
                width: 64%;
                margin-right: 2.6%;
            }

        .body .side-images img {
            height: 150px;
            margin-bottom: 20px;
            width: 100%;
        }

    .banner {
        width: 100%;
        height: 170px;
        margin-bottom: 10px;
    }

    .sale-section {
        background-color: #f1f1f1;
        padding: 20px;
        margin-top: 20px;
        border-radius: 20px;
        overflow: hidden; /* Đảm bảo không có thanh cuộn dọc */
    }

        .sale-section h3 {
            margin: 0;
        }

        .sale-section .products {
            display: flex;
            flex-wrap: nowrap; /* Không cho phép wrap các phần tử */
            justify-content: flex-start;
            gap: 20px;
            margin-top: 20px;
            margin-bottom: 20px;
            overflow-x: auto; /* Thêm thanh cuộn ngang khi cần thiết */
            -webkit-overflow-scrolling: touch; /* Cho phép cuộn mượt trên thiết bị di động */
        }

    /* Title Section */
    .title-items {
        display: flex;
        margin-top: 10px;
        align-items: center;
    }

    .title-text {
        font-size: 20px;
        font-weight: bolder;
    }

    /* Button Container */
    .button-container {
        display: flex;
        margin-left: 230px;
    }

    /* Common Button Styles */
    .product-button {
        margin-right: 20px;
        border: 1px solid #ccc;
        border-radius: 7px;
        padding: 5px 15px;
        background-color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .product-button:hover {
            background-color: #f0f0f0;
        }

    /* "Xem tất cả" Button */
    .view-all-button {
        border-radius: 7px;
        border: 1px solid #ccc;
        padding: 5px 15px;
        background-color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .view-all-button:hover {
            background-color: #f0f0f0;
        }


    .product-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        gap: 25px;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .product {
        background: #FFFFFF;
        padding: 10px;
        width: 200px;
        border: 1px solid #ccc;
        border-radius: 10px;
        margin-bottom: 10px;
        flex-shrink: 0; /* Không thu nhỏ phần tử */
    }

        .product:hover {
            background-color: #f0f0f0;
        }

        .product img {
            width: 80%;
            height: 150px;
        }

        .product p:nth-child(2) {
            font-size: 14px;
            font-weight: bold;
        }

        .product p:nth-child(3) {
            font-size: 12px;
            font-weight: bold;
        }

        .product p:nth-child(4) {
            font-size: 12px;
        }

    .footer {
        background-color: #f1f1f1;
        padding-top: 20px;
        padding-left: 20px;
        padding-right: 20px;
        padding-bottom: 5px;
    }

        .footer .footer-content {
            display: flex;
            justify-content: space-between;
        }

            .footer .footer-content div {
                text-align: left;
            }

            .footer .footer-content p {
                font-size: 12px;
                font-weight: bold;
            }

    .footer-info {
        text-align: center;
        background-color: #f1f1f1;
        padding-top: 5px;
        padding-bottom: 5px;
    }
</style>

