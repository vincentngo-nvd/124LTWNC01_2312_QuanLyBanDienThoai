<!-- Đưa phần style vào đầu file -->
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Header Style */
    .header {
        background-color: #E0052B;
        padding: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

        .header div select {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .header .logo {
            height: 40px;
            margin-right: 30px;
        }

        .header .search-container {
            position: relative;
            margin-left: 20px;
        }

            .header .search-container input {
                margin-left: 5px;
                padding-left: 30px;
                height: 30px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .header .search-container img {
                height: 20px;
                width: 20px;
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
            }

        .header a {
            color: white;
            text-decoration: none;
            margin-left: 30px;
        }

            .header a img {
                height: 20px;
                vertical-align: middle;
            }

        .header .buttons button {
            margin-left: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 5px;
        }

        .header .buttons img {
            height: 20px;
            vertical-align: middle;
        }

    .category {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0;
        border: 1px solid #ccc;
    }

        .category button {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 150px;
            height: 40px;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 5px;
            padding-bottom: 5px;
            border: 1px solid #ccc;
            margin: 0;
            text-align: center;
            background-color: #fff;
        }

            .category button:hover {
                background-color: #f1f1f1;
            }

        .category img {
            height: 20px;
            margin-right: 5px;
        }


    .body {
        max-width: 1100px; /* Chiều rộng tối đa của nội dung chính */
        margin: 20px auto; /* Căn giữa và tạo khoảng cách trên dưới */
        border-radius: 8px; /* Bo góc */
    }

    .banner {
        width: 100%;
        height: 170px;
        margin-bottom: 10px;
    }

    .sale-section {
        background-color: #f1f1f1;
        padding: 20px;
        margin-top: 20px;
        border-radius: 20px;
    }

        .sale-section h3 {
            margin: 0;
        }

        .sale-section .products {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            gap: 20px;
            margin-top: 20px;
            margin-bottom: 20px;
            overflow-x: scroll;
        }

    /* Title Section */
    .title-items {
        display: flex;
        margin-top: 10px;
        align-items: center;
    }

    .title-text {
        font-size: 24px;
        font-weight: bolder;
    }

    /* Button Container */
    .button-container {
        display: flex;
        margin-left: 475px;
    }

    /* Common Button Styles */
    .product-button {
        margin-right: 20px;
        border: 1px solid #ccc;
        border-radius: 7px;
        padding: 5px 15px;
        background-color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .product-button:hover {
            background-color: #f0f0f0;
        }

    /* "Xem tất cả" Button */
    .view-all-button {
        border-radius: 7px;
        border: 1px solid #ccc;
        padding: 5px 15px;
        background-color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .view-all-button:hover {
            background-color: #f0f0f0;
        }


    .product-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        gap: 13px;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .product {
        background: #FFFFFF;
        padding: 10px;
        width: 200px;
        border: 1px solid #ccc;
        border-radius: 10px;
        margin-bottom: 10px;
    }

        .product img {
            width: 80%;
            height: 150px;
        }

        .product p:nth-child(2) {
            font-size: 14px;
            font-weight: bold;
        }

        .product p:nth-child(3) {
            font-size: 12px;
            font-weight: bold;
        }

        .product p:nth-child(4) {
            font-size: 12px;
        }


    .footer {
        background-color: #f1f1f1;
        padding-top: 20px;
        padding-left: 20px;
        padding-right: 20px;
        padding-bottom: 5px;
    }

        .footer .footer-content {
            display: flex;
            justify-content: space-between;
        }

            .footer .footer-content div {
                text-align: left;
            }

            .footer .footer-content p {
                font-size: 12px;
                font-weight: bold;
            }

    .footer-info {
        text-align: center;
        background-color: #f1f1f1;
        padding-top: 5px;
        padding-bottom: 5px;
    }

    .order-container {
        margin: 20px auto;
        padding: 20px;
        max-width: 800px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 10px;
    }

        .order-header h2 {
            font-size: 24px;
            font-weight: bold;
        }

        .order-header h3 {
            font-size: 18px;
            color: #666;
        }

    .order-content {
        margin-top: 20px;
    }

    .order-item {
        margin-bottom: 15px;
        padding: 15px;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
    }

        .order-item h3 {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .order-item p {
            margin: 5px 0;
        }

        .order-item .order-status span {
            font-weight: bold;
            color: green;
        }

        .order-item .order-price span {
            font-weight: bold;
            color: #E0052B;
        }

    .contact-container {
        max-width: 800px;
        margin: 20px auto;
        text-align: center;
    }

    .contact-header {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .search-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }

        .search-bar input {
            width: 60%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px 0 0 5px;
            outline: none;
        }

        .search-bar .search-btn {
            background-color: #E0052B;
            border: none;
            padding: 10px;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
        }

            .search-bar .search-btn img {
                height: 20px;
                width: 20px;
            }

    .contact-options {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin: 20px 0;
    }

        .contact-options .option {
            width: 60px;
            height: 60px;
            border: 2px solid #ccc;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: transform 0.3s ease, border-color 0.3s ease;
        }

            .contact-options .option:hover {
                transform: scale(1.1);
                border-color: #E0052B;
            }

            .contact-options .option img {
                width: 30px;
                height: 30px;
            }

    .faq-section {
        text-align: left;
        margin-top: 20px;
    }

        .faq-section h3 {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .faq-section ul {
            list-style: none;
            padding: 0;
        }

        .faq-section li {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            transition: background-color 0.3s ease, border-color 0.3s ease;
            cursor: pointer;
        }

            .faq-section li:hover {
                background-color: #f9f9f9;
                border-color: #E0052B;
            }

</style>

